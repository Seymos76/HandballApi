{% extends 'administration/admin.html.twig' %}

{% block title %}Gestion des équipes{% endblock %}
{% block header %}Gérer les équipes{% endblock %}

{% block body %}
    <table class="table table-bordered table-responsive-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>League</th>
                <th>Season</th>
                <th>Joueurs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td>{{ team.league }}</td>
                <td>{{ team.season }}</td>
                <td>{{ team.players|length }}</td>
                <td>
                    <div class="btn-group btn-group-lg" role="group" aria-label="">
                        <a href="{{ path('team_show', {'id': team.id}) }}" class="btn btn-outline-info"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-outline-primary"><i class="fa fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}" class="btn btn-outline-primary">Ajouter une équipe</a>
{% endblock %}
