{% extends 'administration/admin.html.twig' %}

{% block title %}Gestion des équipes{% endblock %}
{% block header %}Équipe {{ team.name }}{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>NOM</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>League</th>
                <td>{{ team.league }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ team.season }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}" class="btn btn-outline-dark">Retour à la liste</a>

    <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-outline-primary">Modifier</a>

    {{ include('administration/team/_delete_form.html.twig') }}
{% endblock %}
