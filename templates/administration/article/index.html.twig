{% extends 'administration/admin.html.twig' %}

{% block title %}Gestion des articles{% endblock %}
{% block header %}Gérer les articles{% endblock %}

{% block body %}
    <table class="table table-bordered table-responsive-sm">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Créé le</th>
                <th>Résumé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.dateCreation ? article.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.summary|slice(0,100)|raw }}...</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-outline-info"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-primary"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="btn btn-outline-primary">Ajouter un article</a>
{% endblock %}
