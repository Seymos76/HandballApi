{% extends 'administration/admin.html.twig' %}

{% block title %}Gestion des entraînements{% endblock %}
{% block header %}Entrainement {{ training.team.name }}{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Équipe concernée</th>
            <td>{{ training.team.name }}</td>
        </tr>
        <tr>
            <th>Horaire de début</th>
            <td>{{ training.timeStart ? training.timeStart|date('H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Horaire de fin</th>
            <td>{{ training.timeEnd ? training.timeEnd|date('H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <br>

    <a href="{{ path('training_index') }}" class="btn btn-outline-dark">Retour à la liste</a>

    <a href="{{ path('training_edit', {'id': training.id}) }}" class="btn btn-outline-primary">Modifier</a>

    {{ include('administration/training/_delete_form.html.twig') }}
{% endblock %}
