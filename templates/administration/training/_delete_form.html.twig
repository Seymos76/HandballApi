<form method="post" action="{{ path('training_delete', {'id': training.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet entraînement ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ training.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
