<form method="post" action="{{ path('image_gallery_delete', {'gallery': gallery.id, 'image': field.vars['value'].id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image ?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ field.vars['value'].id) }}">
	<button class="btn btn-outline-danger">Supprimer l'image</button>
</form>
