{% extends "base.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/home.css') }}">
{% endblock %}
{% block body %}
	<section class="slider__overlay">
		<h1>Association de Handball de Forges-les-Eaux</h1>
	</section>
	{% if slides is defined and slides|length != 0 %}
		{% include "default/home/_slider.html.twig" %}
	{% endif %}
	<div id="react_hello_root"></div>
	{% if last_meeting is defined and last_meeting is not null %}
		<div class="page__header">
			<h2>Resultats des matchs du {{ last_meeting.meetingDate }}</h2>
		</div>
		<section class="container">
			<div class="last__results flex_row">
				{% include "default/home/_result_table.html.twig" %}
			</div>
		</section>
	{% endif %}
	{% if next_meeting is defined and next_meeting is not null %}
		<div class="page__header">
			<h2>Prochains matchs le {{ next_meeting.meetingDate }}</h2>
		</div>
		<section class="flex_row container home__next__matchs">
			{% set games = next_meeting.games %}
			{% include "default/home/_next_matchs.html.twig" %}
		</section>
	{% endif %}
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('build/home_js.js') }}"></script>
{% endblock %}